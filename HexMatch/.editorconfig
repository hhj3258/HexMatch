# 이 파일은 최상단 EditorConfig 파일임을 선언
root = true

# 모든 파일에 기본 규칙 적용
[*]
charset = utf-8          # 모든 파일을 UTF-8 인코딩으로 저장
end_of_line = lf         # 줄바꿈 방식 (Linux 스타일, Unity 권장)
insert_final_newline = true  # 파일 끝에 빈 줄 추가
indent_style = space     # 들여쓰기 스타일: 스페이스
indent_size = 4          # 들여쓰기 크기: 4칸
trim_trailing_whitespace = true  # 줄 끝 공백 제거